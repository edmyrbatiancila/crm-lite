# Railway Production Environment Variables
# Copy these to Railway dashboard -> Variables

APP_NAME=CRM-lite
APP_ENV=production
APP_DEBUG=false
# IMPORTANT: Replace with your actual Railway domain - DO NOT use ${RAILWAY_PUBLIC_DOMAIN}
APP_URL=https://crm-lite-production-d24e.up.railway.app
# Force all assets to use HTTPS
ASSET_URL=https://crm-lite-production-d24e.up.railway.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_LEVEL=info

# Database - Using PostgreSQL provided by Railway
DB_CONNECTION=pgsql
# DATABASE_URL will be automatically provided by Railway PostgreSQL service

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@crmlite.app"
MAIL_FROM_NAME="${APP_NAME}"

# Generate new key with: php artisan key:generate --show
# Then add it to Railway environment variables
APP_KEY=base64:vw2YiVkm4hGqlT25KQ1cjHyYaiKHzkddzr1HeKjujB8=

# Additional HTTPS enforcement
FORCE_HTTPS=true

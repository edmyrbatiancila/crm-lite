{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "php artisan serve --host=0.0.0.0 --port=$PORT",
    "healthcheckPath": "/up"
  },
  "services": {
    "web": {
      "buildCommand": "composer install --no-dev --optimize-autoloader && npm ci && npm run build",
      "startCommand": "php artisan serve --host=0.0.0.0 --port=$PORT"
    }
  }
}
